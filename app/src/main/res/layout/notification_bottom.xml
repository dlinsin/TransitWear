<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:id="@+id/notification_button_layout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_toRightOf="@id/notification_image"
                  android:gravity="left"
                  android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:layout_weight="2"
            android:background="@drawable/button_selector"
            android:drawableLeft="@drawable/ic_action_cancel"
            android:gravity="center_vertical" android:text="@string/cancel"/>


        <ImageView android:id="@+id/separator_buttons"
                   android:layout_width="1dp"
                   android:layout_height="24dp"
                   android:layout_gravity="center_vertical"
                   android:background="@color/LINE_COLOR"
                   android:contentDescription="@string/app_name"/>

        <Button
            android:id="@+id/resume_button"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="2"
            android:background="@drawable/button_selector"
            android:drawableLeft="@drawable/ic_action_refresh"
            android:gravity="center_vertical" android:text="@string/resume"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/notification_button_separator_layout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_above="@id/notification_button_layout"
                  android:layout_toRightOf="@id/notification_image"
                  android:gravity="left"
                  android:orientation="horizontal">

        <ImageView android:id="@+id/separator_view"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="4dp"
                   android:layout_marginRight="0dp"
                   android:background="@color/LINE_COLOR"
                   android:contentDescription="@string/app_name"/>

    </LinearLayout>

</merge>