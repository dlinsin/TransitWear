<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:id="@+id/layout_line"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/notification_title_layout"
                  android:layout_marginTop="2dp"
                  android:layout_toRightOf="@+id/notification_image"
                  android:gravity="end"
                  android:orientation="horizontal">

        <ImageView
            android:id="@+id/line_image"
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/app_name"/>

        <TextView
            android:id="@+id/line_text4plus"
            style="@style/LineNumberText"
            android:layout_width="54sp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/line_text4"
            style="@style/LineNumberText"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/line_text3"
            style="@style/LineNumberText"
            android:layout_width="28sp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/line_text2"
            style="@style/LineNumberText"
            android:layout_width="18sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/destination_text"
            style="@style/NotificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/minutes_text"
            style="@style/MinutesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            />

    </LinearLayout>

</merge>